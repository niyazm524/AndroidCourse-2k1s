<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="0°"
                android:textColor="#FFFFFF"
                android:textSize="84sp"
                app:layout_constraintBottom_toTopOf="@id/tv_clouds"
                app:layout_constraintEnd_toStartOf="@+id/iv_clouds"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="4°" />

            <TextView
                android:id="@+id/tv_clouds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Loading"
                android:textColor="#fff"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_wind"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_temp"
                tools:text="Clean" />


            <TextView
                android:id="@+id/tv_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_clouds"
                app:layout_constraintRight_toLeftOf="@id/tv_temp_delimiter"
                app:layout_constraintTop_toBottomOf="@id/tv_clouds"
                tools:text="17°" />

            <TextView
                android:id="@+id/tv_temp_delimiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#fff"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/tv_temp_max"
                app:layout_constraintRight_toLeftOf="@id/tv_temp_min"
                app:layout_constraintTop_toTopOf="@+id/tv_temp_max" />

            <TextView
                android:id="@+id/tv_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="@id/tv_temp_delimiter"
                app:layout_constraintRight_toRightOf="@id/tv_clouds"
                app:layout_constraintTop_toTopOf="@+id/tv_temp_max"
                tools:text="4°" />

            <ImageView
                android:id="@+id/iv_clouds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="clouds"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/tv_temp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_temp"
                app:layout_constraintTop_toTopOf="@+id/tv_temp"
                tools:src="@drawable/icon_03n" />

            <TextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_weather_wind"
                android:drawablePadding="6dp"
                android:drawableTint="#fff"
                android:text="0.0 m/s N"
                android:textColor="#fff"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_clouds"
                app:layout_constraintTop_toTopOf="@+id/tv_clouds"
                tools:text="1.4 m/s W" />

            <TextView
                android:id="@+id/tv_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawableStart="@drawable/ic_weather_pressure"
                android:drawablePadding="8dp"
                android:drawableTint="#fff"
                android:text="1015 mmHg"
                android:textColor="#fff"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_wind"
                app:layout_constraintTop_toBottomOf="@+id/tv_wind"
                tools:text="1008" />

            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_weather_humidity"
                android:drawablePadding="6dp"
                android:drawableTint="#fff"
                android:text="0%"
                android:textColor="#fff"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/tv_city"
                app:layout_constraintStart_toStartOf="@+id/tv_pressure"
                app:layout_constraintTop_toBottomOf="@+id/tv_pressure"
                tools:text="60%" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:drawableStart="@drawable/ic_location_black_24dp"
                android:drawableTint="#fff"
                android:text="City"
                android:textColor="#fff"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_humidity"
                tools:text="Казань" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
